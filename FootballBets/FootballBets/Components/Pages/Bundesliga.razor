@page "/bundesliga"
@rendermode InteractiveServer

<h3>Bundesliga</h3>
<br />

<div class="container">
  <div class="row justify-content-center">
    <div class="col-6 col-sm-3 mb-2">
      <button class="btn btn-primary w-100" @onclick="OnTabelaClick">Tabela</button>
    </div>
    <div class="col-6 col-sm-3 mb-2">
      <button class="btn btn-primary w-100" @onclick="OnMeczeClick">Mecze</button>
    </div>
    <div class="col-6 col-sm-3 mb-2">
      <button class="btn btn-primary w-100" @onclick="OnStrzelcyClick">Strzelcy</button>
    </div>
    <div class="col-6 col-sm-3 mb-2">
      <button class="btn btn-primary w-100" @onclick="OnTypyClick">Typy</button>
    </div>
  </div>
</div>
<p>Wybrano @mojTekst</p>

@if(tabelaDisplay)
{
    <TeamsTable />
}

@if(strzelcyDisplay)
{
    <div class="d-flex justify-content-center">
        <table class="table table-bordered table-hover">
            <thead class="table-dark">
                <tr class="text-center">
                    <th>Lp.</th>
                    <th>Imię i nazwisko</th>
                    <th>Klub</th>
                    <th>Bramki</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>1</td>
                    <td>Robert Lewandowski</td>
                    <td>Bayern Monachium</td>
                    <td>25</td>
                </tr>
                <tr>
                    <td>2</td>
                    <td>Erling Haaland</td>
                    <td>Borussia Dortmund</td>
                    <td>22</td>
                </tr>
                <tr>
                    <td>3</td>
                    <td>Timo Werner</td>
                    <td>RB Lipsk</td>
                    <td>20</td>
                </tr>
                <tr>
                    <td>4</td>
                    <td>Sebastian Haller</td>
                    <td>Eintracht Frankfurt</td>
                    <td>18</td>
                </tr>
                <tr>
                    <td>5</td>
                    <td>Carlos Vinicius</td>
                    <td>Bayer Leverkusen</td>
                    <td>15</td>
                </tr>
            </tbody>
        </table>
    </div>
}

@if(meczeDisplay)
{
    <div class="d-flex justify-content-center">
        <table class="table table-bordered table-hover">
            <thead class="table-dark">
                <tr class="text-center">
                    <th>Data</th>
                    <th>Gospodarze</th>
                    <th>Wynik</th>
                    <th>Goście</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>2023-08-20</td>
                    <td>Bayern Monachium</td>
                    <td>3:1</td>
                    <td>Borussia Dortmund</td>
                </tr>
                <tr>
                    <td>2023-08-21</td>
                    <td>RB Lipsk</td>
                    <td>2:2</td>
                    <td>Eintracht Frankfurt</td>
                </tr>
                <tr>
                    <td>2023-08-22</td>
                    <td>Bayer Leverkusen</td>
                    <td>1:0</td>
                    <td>VfL Wolfsburg</td>
                </tr>
            </tbody>
        </table>
    </div>
}

@code {
    private string mojTekst = "";
    private bool tabelaDisplay = false;
    private bool strzelcyDisplay = false;
    private bool meczeDisplay = false;
    private bool typyDisplay = false;

    private void OnTabelaClick()
    {
        mojTekst = "Tabela";
        tabelaDisplay = true;
        strzelcyDisplay = false;
        meczeDisplay = false;
        typyDisplay = false;
    }

    private void OnMeczeClick()
    {
        mojTekst = "Mecze";
        tabelaDisplay = false;
        strzelcyDisplay = false;
        meczeDisplay = true;
        typyDisplay = false;
    }

    private void OnStrzelcyClick()
    {
        mojTekst = "Strzelcy";
        tabelaDisplay = false;
        strzelcyDisplay = true;
        meczeDisplay = false;
        typyDisplay = false;
    }

    private void OnTypyClick()
    {
        mojTekst = "Typy";
        tabelaDisplay = false;
        strzelcyDisplay = false;
        meczeDisplay = false;
        typyDisplay = true;
    }
}
